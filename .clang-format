# Minimal clang-format for C++/OpenGL projects

BasedOnStyle: LLVM
IndentWidth: 4
ColumnLimit: 100
UseTab: Never
BreakBeforeBraces: Allman
AlignConsecutiveAssignments: true
SortIncludes: true
IncludeBlocks: Preserve   # Keep include blocks separated

# Ensure glad.h stays at the top
IncludeCategories:
  - Regex: '.*glad\.h'
    Priority: 1
  - Regex: '<GLFW/glfw3.h>'
    Priority: 2
  - Regex: '<.*>'
    Priority: 3
  - Regex: '".*"'
    Priority: 4

